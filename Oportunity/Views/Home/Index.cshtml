@model IEnumerable<Oportunity.Models.ProductViewModel>

<form>
    <div class="hero-slider">
      <div class="slider-item th-fullpage hero-area" style="background-image: url(images/slider/slider-1.jpg);">
        <div class="container">
          <div class="row">
            <div class="col-lg-8 text-center">
              <p data-duration-in=".3" data-animation-in="fadeInUp" data-delay-in=".1">PRODUTOS</p>
              <h1 data-duration-in=".3" data-animation-in="fadeInUp" data-delay-in=".5">Toda linha de Iphones <br> com a qualidade que você merece.</h1>
              <a data-duration-in=".3" data-animation-in="fadeInUp" data-delay-in=".8" class="btn" asp-controller="Products" asp-action="Index">Ver agora</a>
            </div>
          </div>
        </div>
      </div>
      <div class="slider-item th-fullpage hero-area" style="background-image: url(images/slider/slider-3.jpg);">
        <div class="container">
          <div class="row">
            <div class="col-lg-8 text-left">
              <p data-duration-in=".3" data-animation-in="fadeInUp" data-delay-in=".1">PRODUTOS</p>
              <h1 data-duration-in=".3" data-animation-in="fadeInUp" data-delay-in=".5">O melhor de Iphone <br> com a qualidade que você merece.</h1>
              <a data-duration-in=".3" data-animation-in="fadeInUp" data-delay-in=".8" class="btn" href="ProductDetails.cshtml">Ver agora</a>
            </div>
          </div>
        </div>
      </div>
      <div class="slider-item th-fullpage hero-area" style="background-image: url(images/slider/slider-2.jpg);">
        <div class="container">
          <div class="row">
            <div class="col-lg-8 text-right">
              <p data-duration-in=".3" data-animation-in="fadeInUp" data-delay-in=".1">PRODUCTS</p>
              <h1 data-duration-in=".3" data-animation-in="fadeInUp" data-delay-in=".5">The beauty of nature <br> is hidden in details.</h1>
              <a data-duration-in=".3" data-animation-in="fadeInUp" data-delay-in=".8" class="btn" asp-controller="Products" asp-action="Index">Shop Now</a>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="container row">
        @foreach (var product in Model)
        {
            <div class="col-md-3 mb-2">
                <a href="/Products/ProductDetails/@product.Id">
                    <div class="card">
                        <img class="img-thumbnail" src="/images/@product.ImageURL">
                        <div class="card-body">
                            <h5 class="card-title mb-2">
                                @product.Name   
                            </h5>
                            <p class="cart-text text-black">
                                <b>@product.Price.ToString("C")</b>
                            </p>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
    <section class="section instagram-feed">
        <div class="container">
            <div class="row">
                <div class="title">
                    <h2>Visite-nos no instagram</h2>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="instagram-slider" id="instafeed" data-accessToken="IGQVJWSEdCVGxKSnhhV1Qwa2cxUFZABYUtHd25ObDE1ZAXczeVAxY3ZAuUnRCVDZACUzZAYRFBUbld4bExxcllyU0VYT3VPT09HWjhOTlZArdFFYbkhfN2JCY3Nka0RiYWJsV0RfVU1pMzk1RXBYVlpsa0RBOQZDZD"></div>
                </div>
            </div>
        </div>
    </section>
</form>