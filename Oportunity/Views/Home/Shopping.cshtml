@model IEnumerable<Oportunity.Models.ProductViewModel>

<div class="container row">
    @using (Html.BeginForm("Shopping", "Home", FormMethod.Get))
    {
        <div class="form-group" style="padding-bottom:25px">
            <label class="col-md-1 control-label">Categoria:</label>
            <div class="dropdown">
                @Html.DropDownList("categoryId", ViewBag.Category, "Todas", new { onchange = @"form.submit();" })
            </div>
        </div>
    }   

    @foreach (var product in Model)
    {
        <div class="col-md-3 mb-2">
            <a href="/Products/ProductDetails/@product.Id">
                <div class="card">
                    <img class="img-thumbnail" src="/images/@product.ImageURL">
                    <div class="card-body">
                        <h5 class="card-title mb-2">
                            @product.Name
                        </h5>
                        <p class="cart-text text-black">
                            <b>@product.Price.ToString("C")</b>
                        </p>
                    </div>
                </div>
            </a>
        </div>
    }
</div>